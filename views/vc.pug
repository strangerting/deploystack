extends layout
//----------------------------------- MIXINS --------------------------------//
//- Signup buttons mixins
mixin github-signup
  a.btn.btn-primary.b(rel="nofollow" target="_blank", href="https://github.com") Open GitHub
mixin gitlab-signup
  a.btn.btn-primary.b(rel="nofollow" target="_blank", href="https://about.gitlab.com/") Open GitLab
mixin bitbucket-signup
  a.btn.btn-primary.b(rel="nofollow" target="_blank", href="https://bitbucket.org/product") Open Bitbucket

include includes/section-mixins
//----------------------------------- CONTENT -------------------------------//
block content
  +section-hero(content)
  main
    .main.main-raised.pb6.mb6
      .text-center
        .container
          .row.mt4
            +pricing-card('GitLab')
              ul
                li Free public repositories
                li Free private repositories
                li Free to host on your servers
                li Comes with free continuos integration<br>
                  | (2,000 CI minutes/month for free)<br>
                  | and deployment tools
                li
                  .li-filler25
                  +gitlab-signup
            +pricing-card('GitHub')
              ul
                li Free public repositories
                li Private repositories: #[strong $7]/month
                li Free private repositories for&nbsp;
                  a(rel="nofollow" target="_blank", href="https://education.github.com/pack") students
                li Host on your servers: #[strong $21]/user/month
                li
                  .li-filler21
                  .li-filler21
                  .li-filler25
                  +github-signup
            +pricing-card('Bitbucket')
              ul
                li Free public repositories
                li Free private repositories (5 users)
                li Above 5 users: #[strong $2]/user/month
                li Free 50 build minutes/month<br>
                  | and 1 GB file storage
                li Free for academic accounts
                li
                  +bitbucket-signup
