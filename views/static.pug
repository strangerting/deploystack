extends layout
//----------------------------------- MIXINS --------------------------------//
mixin github-signup
  a.btn.btn-primary.b(rel="nofollow" target="_blank", href="https://pages.github.com/") Open GitHub Pages
mixin gitlab-signup
  a.btn.btn-primary.b(rel="nofollow" target="_blank", href="https://pages.gitlab.io/") Open GitLab Pages
mixin surge-signup
  a.btn.btn-primary.b(rel="nofollow" target="_blank", href="http://surge.sh/") Open Surge
mixin netlify-signup
  a.btn.btn-primary.b(rel="nofollow" target="_blank", href="https://www.netlify.com") Open Netlify
mixin firebase-signup
  a.btn.btn-primary.b(rel="nofollow" target="_blank", href="https://firebase.google.com/") Open Firebase

include includes/section-mixins
//----------------------------------- CONTENT -------------------------------//
block content
  +section-hero(content)
  main
    .main.main-raised.pb6.mb6
      .div
        .container
          .row.mt5
            .col-sm-12
              .card.card-nav-tabs.card-plain
                .header.header-primary
                  .nav-tabs-navigation
                    .nav-tabs-wrapper.nav-center
                      ul.nav.nav-tabs(data-tabs="tabs" role="tablist")
                        li.active(role="presentation")
                          a(href="#static-git" aria-controls="static-git" role="tab" data-toggle="tab") Git
                        li(role="presentation")
                          a(href="#static-simple" aria-controls="static-simple" role="tab" data-toggle="tab") Simple
                        li(role="presentation")
                          a(href="#static-advanced" aria-controls="static-advanced" role="tab" data-toggle="tab") Advanced
              .content
                .tab-content.text-center
                  #static-git.tab-pane.active(role="tabpanel")
                    .row
                      +pricing-card("GitLab pages", "col-xs-12 col-sm-4 col-sm-offset-2")
                        ul
                          li #[strong Free], static pages are hosted on GitLab
                          li Separate websites for projects and organizations
                          li Supports any static site generator
                          li Free Continuous Integration
                          li Slightly more complicated setup
                          li
                            +gitlab-signup
                      +pricing-card("GitHub pages")
                        ul
                          li #[strong Free], static pages are hosted on GitHub
                          li Separate websites for projects and organizations
                          li Supports only Jekyll (to use other static site generators, you need to precompile files locally)
                          li Easy, out-of-the-box setup
                          li
                            .li-filler4
                            +github-signup
                  #static-simple.tab-pane(role="tabpanel")
                    .row
                      +pricing-card("Surge", "col-xs-12 col-sm-4 col-sm-offset-2")
                        ul
                          li Free plan with unlimited websites, custom domains and basic SSL
                          li Paid plan: #[strong $30]/month
                          li CLI and dashboard interface
                          li Global CDN
                          li Custom SSL (paid plan)
                          li Custom redirects (paid plan)
                          li Cross-Origin Resource Sharing<br>
                            | (paid plan)
                          li
                            .li-filler4
                            .li-filler25
                            .li-filler25
                            .li-filler38
                            .li-filler38
                            +surge-signup
                      +pricing-card("Netlify")
                        ul
                          li Free plan for simple websites
                          li Paid plans starting from #[strong $45]/month
                          li CDN for faster websites rendering
                          li Free SSL certificates
                          li HTTP2 support
                          li Unlimited snapshots for reverting changes easily
                          li Continuous Integration with GitHub, GitLab, BitBucket or your own repository
                          li Supports multiple static site generators (Jekyll, Grunt, Middleman, Roots, Hugo) and front end build tools (Grunt, Gulp, Broccoli)
                          li
                            +netlify-signup
                  #static-advanced.tab-pane(role="tabpanel")
                    .row
                      +pricing-card("Firebase", "col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4")
                        ul
                          li Free plan (1GB storage, 10GB/month transfer)
                          li Pay as you go and monthly plans available
                          li CDN for faster websites rendering
                          li Free SSL certificates
                          li HTTP2 support
                          li Requires manual deployment
                          li Provides hosting, DB, files storage, Cloud Functions (like AWS Lambda), phone authentication, Machine Learning Kit.
                          li
                            +firebase-signup
